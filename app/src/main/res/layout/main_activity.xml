<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="19dp"
        android:padding="3dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="115dp"
            android:src="@drawable/final_logo"
            android:contentDescription="app logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LearnHub"
                android:layout_marginLeft="35dp"
                android:textColor="#181616"
                android:textStyle="bold"
                android:textSize="40sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'Empowering Your Study Journey!'"
                android:layout_marginLeft="35dp"
                android:textColor="#181616"
                android:textStyle="italic"
                android:textSize="22sp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_marginTop="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/login_image" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:orientation="vertical"
        android:layout_margin="22dp"
        android:padding="16dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enter email id:"
    android:textColor="#100E0E"
    android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter valid email id"
            android:background="#E3E3E3"
            android:layout_marginTop="8dp"
            android:minHeight="39dp"
            android:padding="12dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Password:"
            android:textColor="#100E0E"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password to set"
            android:background="#E3E3E3"
            android:layout_marginTop="3dp"
            android:minHeight="39dp"
            android:padding="12dp"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="REGISTER"
            android:layout_gravity="center"
            android:backgroundTint="#E0D048"
            android:layout_marginTop="9dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Â© 2024 LearnHub. All rights reserved."
        android:backgroundTint="#fff"
        android:gravity="center"/>
</LinearLayout>
